<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailjob.DetailJobActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <TextView
            android:id="@+id/tv_job_name"
            style="@style/sub_title_orange"
            android:text="@string/job_name"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_job_address"
            android:layout_width="wrap_content"
            style="@style/text_with_icon"
            android:text="@string/job_address"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_name"
            app:drawableStartCompat="@drawable/ic_outline_location" />

        <TextView
            android:id="@+id/tv_job_date"
            android:layout_width="wrap_content"
            style="@style/text_with_icon"
            android:text="@string/job_date"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_job_address"
            app:drawableStartCompat="@drawable/ic_outline_calendar"/>

        <TextView
            android:id="@+id/tv_job_time"
            android:layout_width="wrap_content"
            style="@style/text_with_icon"
            android:text="@string/job_time"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_job_date"
            app:drawableStartCompat="@drawable/ic_outline_time"/>

        <TextView
            android:id="@+id/salary_title"
            style="@style/sub_title"
            android:text="@string/salary"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_job_time" />

        <TextView
            android:id="@+id/tv_salary"
            style="@style/text_body"
            android:text="@string/salary"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/salary_title"
            app:layout_constraintTop_toTopOf="@+id/salary_title" />

        <TextView
            android:id="@+id/detail_job_title"
            style="@style/sub_title"
            android:text="@string/detail_job"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/salary_title" />

        <TextView
            android:id="@+id/tv_detail_job"
            style="@style/text_body"
            android:text="@string/detail_job"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_job_title"
            android:justificationMode="inter_word"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/user_role"
            style="@style/sub_title"
            android:text="@string/employee"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_job" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/blue"
            android:src="@drawable/user_photo"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_role"
            android:contentDescription="@string/user_photo" />

        <TextView
            android:id="@+id/tv_username"
            style="@style/text_body"
            android:text="@string/username"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/user_photo"
            app:layout_constraintTop_toTopOf="@+id/user_photo"
            app:layout_constraintBottom_toBottomOf="@+id/user_photo"/>

        <TextView
            android:id="@+id/title_rating"
            style="@style/sub_title"
            android:text="@string/rating"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_photo" />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:theme="@style/RatingBar"
            android:stepSize="1"
            android:numStars="5"
            android:rating="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_rating"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/title_review"
            style="@style/sub_title"
            android:text="@string/review"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rating_bar" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reviewEditTextLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:hintEnabled="false"
            app:counterEnabled="true"
            app:counterMaxLength="255"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_review">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="@string/review_hint"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLength="255" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_finish"
            style="@style/button"
            android:text="@string/finish"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reviewEditTextLayout"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>