<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_job_name"
            style="@style/sub_title_orange"
            android:text="@string/job_name"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/tv_upload_date"
            style="@style/text_body"
            android:text="@string/upload_date"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/tv_job_address"
            android:layout_width="wrap_content"
            style="@style/text_with_icon"
            android:text="@string/job_address"
            android:maxLines="1"
            android:layout_marginTop="4dp"
            app:drawableStartCompat="@drawable/ic_outline_location" />

        <TextView
            android:id="@+id/tv_job_date"
            android:layout_width="wrap_content"
            style="@style/text_with_icon"
            android:text="@string/job_date_time"
            app:drawableStartCompat="@drawable/ic_outline_calendar"/>

        <TextView
            android:id="@+id/tv_job_time"
            android:layout_width="wrap_content"
            style="@style/text_with_icon"
            android:text="@string/job_date_time"
            app:drawableStartCompat="@drawable/ic_outline_time"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>