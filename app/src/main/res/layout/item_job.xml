<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_job_name"
            style="@style/sub_title_orange"
            android:text="@string/job_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/tv_job_address"
            android:layout_width="wrap_content"
            style="@style/text_with_icon"
            android:text="@string/job_address"
            android:maxLines="1"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_name"
            app:drawableStartCompat="@drawable/ic_outline_location" />

        <TextView
            android:id="@+id/tv_job_date"
            android:layout_width="wrap_content"
            style="@style/text_with_icon"
            android:text="@string/job_date"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_job_address"
            app:drawableStartCompat="@drawable/ic_outline_calendar"/>

        <TextView
            android:id="@+id/tv_job_time"
            android:layout_width="match_parent"
            style="@style/text_with_icon"
            android:text="@string/job_time"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_job_date"
            app:drawableStartCompat="@drawable/ic_outline_time"/>

        <TextView
            android:id="@+id/tv_worker"
            style="@style/text_body"
            android:text="@string/worker"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_job_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>