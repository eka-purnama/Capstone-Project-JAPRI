<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.welcome.WelcomeScreenActivity">

    <ImageView
        android:id="@+id/welcome_picture"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome_picture"
        android:adjustViewBounds="true"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/welcome_picture_content"/>

    <TextView
        android:id="@+id/title"
        style="@style/title"
        android:text="@string/welcome_title"
        android:layout_marginTop="20dp"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_picture"
        app:layout_constraintEnd_toEndOf="parent"
        tools:alpha="100"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_description"
        android:layout_marginTop="8dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:alpha="100"/>

    <Button
        android:id="@+id/btn_register"
        style="@style/button"
        android:layout_marginBottom="12dp"
        android:text="@string/text_register"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:alpha="100"/>

    <Button
        android:id="@+id/btn_login"
        style="@style/button"
        android:layout_marginBottom="4dp"
        android:text="@string/text_login"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_register"
        tools:alpha="100"/>

</androidx.constraintlayout.widget.ConstraintLayout>