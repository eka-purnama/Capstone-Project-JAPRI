<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.AccountFragment">

    <View
        android:id="@+id/identity_card_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_client"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="@id/identity_card_view"
        app:layout_constraintTop_toTopOf="@id/identity_card_view"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        />

    <TextView
        android:id="@+id/tv_account_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/user_photo"
        app:layout_constraintTop_toTopOf="@+id/user_photo"/>

    <TextView
        android:id="@+id/edit_photo"
        android:layout_width="wrap_content"
        style="@style/text_with_icon"
        android:text="@string/change_photo"
        android:layout_marginTop="6dp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toEndOf="@+id/user_photo"
        app:layout_constraintTop_toBottomOf="@+id/tv_account_username"
        app:drawableEndCompat="@drawable/ic_arrow_right" />

    <androidx.cardview.widget.CardView
        android:id="@+id/history_job_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="10dp"
        android:layout_margin="24dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/identity_card_view"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/history_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_service"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            app:drawableTopCompat="@drawable/ic_job_history" />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/line1"
        style="@style/line"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/history_job_card_view"/>

    <TextView
        android:id="@+id/account_setting"
        android:layout_width="match_parent"
        style="@style/text_with_icon"
        android:padding="16dp"
        android:text="@string/account_setting"
        android:foreground="?android:attr/selectableItemBackground"
        app:drawableStartCompat="@drawable/ic_person"
        app:drawableEndCompat="@drawable/ic_arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"/>

    <View
        android:id="@+id/line2"
        style="@style/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_setting"/>

    <TextView
        android:id="@+id/about_app"
        style="@style/text_with_icon"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:text="@string/about_application"
        android:foreground="?android:attr/selectableItemBackground"
        app:drawableStartCompat="@drawable/ic_info"
        app:drawableEndCompat="@drawable/ic_arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"/>

    <View
        style="@style/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_app"/>

    <Button
        android:id="@+id/btn_logout"
        style="@style/button"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:text="@string/logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/user_photo"
        app:layout_constraintBottom_toBottomOf="@+id/user_photo"
        app:layout_constraintEnd_toEndOf="@+id/user_photo"
        app:layout_constraintStart_toStartOf="@+id/user_photo"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>